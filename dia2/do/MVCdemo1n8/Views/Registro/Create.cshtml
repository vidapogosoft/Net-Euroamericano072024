@model MVCdemo1n8.Models.Registro

<h4>Registro de Personas</h4>

<hr/>

<div class="form-horizontal">

	<div class="form-group">
		<label>Identificacion:</label>
		@Html.EditorFor(model => model.Identificacion, new{ htmlAttributes = new {@class = "form-control"}})
	</div>

	<div class="form-group">
		<label>Nombres:</label>
		@Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control" } })
	</div>

	<div class="form-group">
		<label>Apellidos:</label>
		@Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
	</div>

	<hr/>

	<div class="form-group">
		<input type="submit" value="Grabar Registro" class="btn btn-dark" />
	</div>

	<hr />

	<div>
		@Html.ActionLink("Regresar a Lista", "Index")
	</div>

</div>